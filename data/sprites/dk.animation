script {
  id: 'dk_taunt'
  animation {
    frame_list {
      frame: [0, 2, 3, 2, 3, 2, 3, 0]
      delay: 300
      repeat: 0
      horizontal_align: HCENTRE
    }
  }
}

script {
  id: 'dk_climb'
  animation {
    frame_range {
      start_frame: 4
      end_frame: 6
      delay: 200
      vertical_align: BOTTOM
    }
    go_to {
      destination {
        x: 300
        y: 160
      }
      step: 1
      delay: 20
    }
  }
}

script {
  id: 'dk_jump'
  repeat: 0
  animation {
    translation {
      vec {
        y: -1
      }
      delay: 20
      repeat: 15
    }
  }
  animation {
    translation {
      vec {
        y: 1
      }
      delay: 20
      repeat: 15
    }
  }
}

script {
  id: 'dk_intro'
  animation {
    run_script {
      script_id: 'dk_climb'
    }
  }
  animation {
    timer {
      delay: 1000
    }
  }
  animation {
    frame_list {
      frame: 5
      vertical_align: BOTTOM
    }
    go_to {
      destination {
        x: 300
        y: 70
      }
      step: 2
      delay: 20
    }
  }
  animation {
    frame_list {
      frame: 0
      vertical_align: BOTTOM
    }
    go_to {
      destination {
        x: 300
        y: 90
      }
      step: 2
      delay: 20
    }
  }
  animation {
    timer {
      delay: 300
    }
  }
  animation {
    go_to {
      destination {
        x: 130
        y: 90
      }
      step: 1
      delay: 17
    }
    run_script {
      script_id: 'dk_jump'
    }
  }
  animation {
    timer {
      delay: 300
    }
  }
  animation {
    run_script {
      script_id: 'dk_taunt'
    }
  }
}
